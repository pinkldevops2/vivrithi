---
import MarkedShape from '../../../public/MarkedShape.svg';
---
<div class="bg-white">
    <div class="container mx-auto px-4">
  <div class="flex flex-wrap">
    <div class="w-full px-4">
      <!-- Column 1 content -->
      <div class="px-8 border_full_side relative">

    <!-- Paragraph -->
    <div class="pt-[25px] flex justify-start flex-col items-start">
        <h2 class="text-[28px] md:text-4xl font-heading leading-snug mb-4 gradient-text">
      Driving Impact by Numbers  
    </h2>


<div class="finance_enabled bg-[#D8F1F9] w-full flex p-5 justify-between">
    <h3 class="text-lg uppercase text-[#1B1B1B] font-bold mt-[-8px]">finance enabled</h3>
    <h2 class="text-[35px] md:text-4xl font-heading leading-snug gradient-text">₹57,500+ cr</h2>
</div>

<div class="assets_under bg-[#DDDDDD] w-[78%] flex p-5 justify-between mt-[-40px]">
    <h3 class="text-lg uppercase text-[#1B1B1B] font-bold mt-[-8px]">Assets Under Management (AUM)</h3>
    <h2 class="text-[35px] md:text-4xl font-heading leading-snug gradient-text">₹13,000+ cr</h2>
</div>

<div class="enterprises_supported bg-[#00018A] w-[57%] flex p-5 justify-between mt-[-40px]">
    <h3 class="text-lg uppercase text-white font-bold mt-[-8px]">enterprises supported</h3>
    <h2 class="text-[35px] md:text-4xl font-heading leading-snug gradient-text2">500+</h2>
</div>

<div class="sectors_served bg-[#BFBFE1] w-[45%] flex p-5 justify-between mt-[-40px]">
    <h3 class="text-lg uppercase font-bold mt-[-8px]">sectors served</h3>
    <h2 class="text-[35px] md:text-4xl font-heading leading-snug gradient-text">55+ </h2>
</div>

<div class="years_business bg-[#F8F8F8] w-[35%] flex p-5 justify-between mt-[-40px]">
    <h3 class="text-lg uppercase font-bold mt-[-8px]">years in business</h3>
    <h2 class="text-[35px] md:text-4xl font-heading leading-snug gradient-text">8+ </h2>
</div>

    <img src={MarkedShape.src} alt="Vivrithi" class="absolute right-[35px] bottom-[-130px]" />
        </div>
      </div>
    </div>
  </div>
</div>
</div>
<style>
.border_full_side{
    border: dashed 1px #F58220;
}
</style>