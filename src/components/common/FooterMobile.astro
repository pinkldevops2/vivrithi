---
import vivrithiLogo from '../../../public/Vivrithi-NEXT.svg';
import instagram from '../../../public/instagram.svg';
import linkedin from '../../../public/linkedin.svg';
import youtube from '../../../public/youtube.svg';
---

<footer class="text-white pt-[4px] sm:hidden block">
  <!-- Main Section -->
<div class="bg-white">
  <div class="container px-6 py-10 mx-auto flex flex-wrap justify-between lg:flex-nowrap sm:gap-10 gap-0">
    <!-- Left Column (Logo & About) -->
    <div class="w-full lg:w-[40%] flex flex-col">
      <img src={vivrithiLogo.src} alt="Vivrithi Logo" class="w-[100%]" />

      <!-- About Accordion (Open by default) -->
      <div class="footer-accordion mt-6 pt-4 border-b border-gray-200 py-3">
        <button class="accordion-header flex justify-between items-center w-full text-left py-2">
          <h4 class="text-[#3E3E3E] uppercase font-bold">About Vivriti Next</h4>
          <!-- SVG Icon -->
          <svg class="accordion-icon transition-transform duration-300 rotate-180" xmlns="http://www.w3.org/2000/svg" width="16" height="10" viewBox="0 0 16 10" fill="none">
            <path d="M0.707031 8.41406L7.70703 1.41406L14.707 8.41406" stroke="#666666" stroke-width="2"/>
          </svg>
        </button>
        <div class="accordion-content max-h-[500px] overflow-hidden transition-[max-height] duration-300 ease-in-out">
          <p class="text-[#666666] text-[14px] leading-[18px] mt-2">
            Vivriti Next is the holding entity of the Vivriti Group, comprising Vivriti Capital Limited, a fintech NBFC, 
            and Vivriti Asset Management Private Limited, an asset manager of fixed-income AIF schemes. <br/><br/>
            We empower mid-market enterprises with high-end advisory, research-driven insights, and opportunities 
            to scale through tech-enabled solutions, while solving complex challenges beyond financing.
          </p>
        </div>
      </div>
    </div>

    <!-- Right Column (Menus) -->
    <div class="w-full lg:w-[40%] flex flex-col md:flex-row justify-between md:text-left sm:gap-6 gap:0 ">

      <!-- Quick Links Accordion -->
      <div class="footer-accordion w-full md:w-1/3 border-b border-gray-200 py-3">
        <button class="accordion-header flex justify-between items-center w-full text-left py-2">
          <h4 class="text-[#3E3E3E] uppercase font-bold">Quick Links</h4>
          <svg class="accordion-icon transition-transform duration-300" xmlns="http://www.w3.org/2000/svg" width="16" height="10" viewBox="0 0 16 10" fill="none">
            <path d="M0.707031 8.41406L7.70703 1.41406L14.707 8.41406" stroke="#666666" stroke-width="2"/>
          </svg>
        </button>
        <div class="accordion-content max-h-0 overflow-hidden transition-[max-height] duration-300 ease-in-out">
          <ul class="space-y-2 text-[#666666] mt-2">
            <li><a href="/about" class="hover:text-blue-500 transition">Governance</a></li>
            <li><a href="/careers" class="hover:text-blue-500 transition">Invest</a></li>
            <li><a href="/contact" class="hover:text-blue-500 transition">Services</a></li>
            <li><a href="/contact" class="hover:text-blue-500 transition">Knowledge Hub</a></li>
          </ul>
        </div>
      </div>

      <!-- Reach Us At Accordion -->
      <div class="footer-accordion w-full md:w-2/3 border-b border-gray-200 py-3">
        <button class="accordion-header flex justify-between items-center w-full text-left py-2">
          <h4 class="text-[#3E3E3E] uppercase font-bold">Reach Us At</h4>
          <svg class="accordion-icon transition-transform duration-300" xmlns="http://www.w3.org/2000/svg" width="16" height="10" viewBox="0 0 16 10" fill="none">
            <path d="M0.707031 8.41406L7.70703 1.41406L14.707 8.41406" stroke="#666666" stroke-width="2"/>
          </svg>
        </button>
        <div class="accordion-content max-h-0 overflow-hidden transition-[max-height] duration-300 ease-in-out">
          <ul class="space-y-2 text-[#666666] mt-2">
            <li><a href="mailto:john.doe@vivritinext.com" class="hover:text-blue-500 transition">john doe@vivritinext.com</a></li>
            <li><a href="tel:+919999999999" class="hover:text-blue-500 transition">+91 99999 99999</a></li>
          </ul>
        </div>
      </div>

      <!-- Headquarters Accordion -->
      <div class="footer-accordion w-full md:w-2/3 mt-4">
        <button class="accordion-header flex justify-between items-center w-full text-left py-2">
          <h4 class="text-[#3E3E3E] uppercase font-bold">Headquarters</h4>
          <svg class="accordion-icon transition-transform duration-300" xmlns="http://www.w3.org/2000/svg" width="16" height="10" viewBox="0 0 16 10" fill="none">
            <path d="M0.707031 8.41406L7.70703 1.41406L14.707 8.41406" stroke="#666666" stroke-width="2"/>
          </svg>
        </button>
        <div class="accordion-content max-h-0 overflow-hidden transition-[max-height] duration-300 ease-in-out">
          <ul class="space-y-2 text-[#666666] mt-2">
            <li>
              <a href="#" class="hover:text-blue-500 transition">
                365, Anna Salai, Rostrevor Garden, Teynampet, Chennai, Tamil Nadu 600018, India
              </a>
            </li>
          </ul>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="bg-[#F8F8F8] w-full">
  <div class="container m-auto">
     <div class="w-full flex justify-center flex-col lg:justify-start">
      
      <div class="ftiso_holder bg-[#F8F8F8] flex md:flex-row items-center justify-center p-4 gap-6 relative">
          <img src="footer_iso.png" class="sm:w-[50px] sm:h-[50px] w-[80px] h-[80px]" />
          <div class="iso_body flex gap-10 items-center">
            <h4 class="text-[#666666] text-[16px] leading-[18px] uppercase hidden sm:block">An ISO 27001 Certified Company</h4>
            <p class="text-[#666666] text-[12px] leading-[14px]">Industrial best practises and regulatory alignment with compliance standards are one of the key initiatives drive from our Information Security team to secure and safeguard the overall security posture of the organization.</p>
          </div>
      </div>
    </div>
  </div>
</div>
  <!-- Bottom Section (Copyright & Social Links) -->
  <div class="max-w-7xl mx-auto flex flex-col sm:flex-row justify-between items-center py-4 text-sm text-gray-400">
    <p class=" text-[#ffffff]"><b>© 2025 VIVRITI next</b>   |   Privacy Policy</p>
    <div class="flex space-x-5 mt-4 sm:mt-0">      
      <a href="#" aria-label="LinkedIn" class="hover:text-blue-400 transition">
        <img src={linkedin.src} alt="Follow us on LinkedIn" class="w-[100%] w-auto" />
      </a>
      <a href="#" aria-label="Instagram" class="hover:text-blue-600 transition">
        <img src={instagram.src} alt="Follow us on Instagram" class="w-[100%] w-auto" />
      </a>
      <a href="#" aria-label="Instagram" class="hover:text-blue-500 transition">
        <img src={youtube.src} alt="Find us on Instagram" class="w-[100%] w-auto" />
      </a>
    </div>
  </div>
</footer>
<style>
    footer{
        background: #3BBAE2;
background: linear-gradient(32deg, rgba(59, 186, 226, 1) 0%, rgba(242, 114, 140, 1) 50%, rgba(245, 130, 32, 1) 100%);
    }
</style>

<!-- Accordion JS: Only one open at a time -->
<script>
  const accordions = document.querySelectorAll('.footer-accordion');

  accordions.forEach((accordion) => {
    const header = accordion.querySelector('.accordion-header');
    const content = accordion.querySelector('.accordion-content');
    const icon = accordion.querySelector('.accordion-icon');

    header.addEventListener('click', () => {
      accordions.forEach((other) => {
        const otherContent = other.querySelector('.accordion-content');
        const otherIcon = other.querySelector('.accordion-icon');
        if (other !== accordion) {
          otherContent.style.maxHeight = '0';
          otherIcon.style.transform = 'rotate(0deg)';
        }
      });

      const isOpen = content.style.maxHeight && content.style.maxHeight !== '0px';
      if (isOpen) {
        content.style.maxHeight = '0';
        icon.style.transform = 'rotate(0deg)';
      } else {
        content.style.maxHeight = content.scrollHeight + 'px';
        icon.style.transform = 'rotate(180deg)';
      }
    });
  });
</script>

